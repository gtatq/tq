{
    "plugins": [
        "-lunr",
        "-search",
        "-sharing",
        "styles-stylus",
        "image-captions",
        "book-summary-scroll-position-saver",
        "emphasize",
        "expandable-chapters-small",
        "favicon",
        "todo",
        "versions-select",
        "back-to-top-button",
        "splitter",
        "code",
        "chapter-fold",
        "anchor-navigation-ex",
        "advanced-emoji",
        "simple-alerts",
        "include-codeblock",
        "ace",
        "folding-content",
        "language-picker",
        "theme-seer"
    ],
    "styles": {
        "website": "./styles/website.styl"
    },
    "variables": {
        "themeSeer":{
            "nav":[
                {
                    "url":"http://www.baidu.com",
                    "target":"_blank",
                    "name": "教程"
                },
                {
                    "url":"http://www.seer-group.com",
                    "target":"_blank",
                    "name": "官网"
                }
            ]
        }
    },
    "pluginsConfig": {
        "theme-default": {
            "showLevel": false
        },
        "disqus": {
            "shortName": "devbook"
        },
        "prism": {
            "css": [
                "prism-themes/themes/prism-base16-ateliersulphurpool.light.css"
            ]
        },
        "simple-alerts": {
            "style": "flat",
            "note": {

            },
            "tip": {

            },
            "warning": {

            },
            "danger": {

            }
        },
        "include-codeblock": {
            "template": "ace",
            "unindent": true,
            "edit": true
        },
        "simple-page-toc": {
            "maxDepth": 5,
            "skipFirstH1": true
        },
        "anchor-navigation-ex": {
	    "showLevel": false,
	    "associatedWithSummary": false,
	    "printLog": false,
    	    "multipleH1": false,

    	    "mode": "float",
    	    "showGoTop":false,

	    "float": {
		"floatIcon": "fa fa-anchor",
        	"showLevelIcon": true,
        	"level1Icon": "fa fa-hand-o-right",
        	"level2Icon": "fa fa-hand-o-right",
        	"level3Icon": "fa fa-hand-o-right"
	    }
        },
        "sectionx": {
            "tag": "b"
        },
        "favicon": {
            "shortcut": "assets/favicon.ico",
            "bookmark": "assets/favicon.ico"
        },
        "terminal": {
            "copyButtons": true,
            "fade": false,
            "style": "flat"
        },
        "versions": {
            "options": [
                {
                    "value": "/3.3",
                    "text": "3.3"
                },
                {
                    "value": "/3.2",
                    "text": "3.2"
                }
            ]
        },
        "code": {
            "copyButtons": true
        },
        "multilingual-index": {
            "index":"index.html",
            "enableSuper": false
        },
        "language-picker": {
            "grid-columns": 3
        },
        "theme-seer":{
            "search-placeholder":"输入关键字搜索",
            "logo":"./logo.svg",
            "favicon": "./favicon.ico" 
        }
    }
}