$main-font-color = teal

.gitbook-link
	display: none !important;

table
	border-collapse: collapse;
	border-spacing: 0;
	table-layout: fixed;

.header-wrapper
	z-index: 1000
	position: fixed;
	left: 0
	top 0
	margin: auto;
	width: 100%;
	height: 60px
	border-bottom: 1px solid #ddd
	background #fff
	.header-inner
		display flex;
		justify-content: space-between
		padding 0 24px
		max-width: 1300px;
		margin: auto;
		width: 100%;
		height: 100%;
		border-bottom 0
		&:before
		&:after
			content none

		.dropdown-menu
			left auto
			right 0
			.dropdown-caret
				left auto
				right 14px
	.head-left
		display: flex
		align-items center
	.head-right-actions
		display: flex
		justify-content: flex-end
		align-items: center
		.header-nav
			margin-top 0
	.book-header
		h1
			display: none

.book
	height: 100%;
.book-wrapper
	width: 100%;
	max-width: 1300px;
	margin: auto;

.with-summary
	.book-summary
		transform translateX(0) !important
.book-body
	position relative !important
	left: 0 !important
	top 100px !important
	overflow hidden !important
	transform translate3d(0, 0, 0) !important
	.body-inner
		position relative
		overflow hidden !important
.page-wrapper
	display: flex;
	margin-top: 0;
	#anchor-navigation-ex-navbar
		display: none
		@media (min-width: 1300px)
			display: block
			right: 234px
			top: 14px
	#gitbook-theme-for-bingopaas-docs
		margin-top 0
.book-summary
	flex: 0 0 auto;
	position: absolute !important;
	left: 0 !important;
	top 0 !important
	background: #fff
	transform translateX(-100%) !important
	transition all .3s;
	.book-summary-title
		padding-left: 10px
	ul.summary
		li
		li.active
			border none
			background: #fff
			>a
				color $main-font-color
	@media (min-width: 1300px)
		display: block;
		position: static !important;
		transform translateX(0) !important
		position: fixed !important
		left 0 !important
		width: 240px !important
.book-header
	@media (min-width: 1300px)
		.js-toolbar-action
			&:first-child
				display none

.book-anchor
	display: none;
	@media (min-width: 1300px)
		display: block;
		width: 190px
		top 0
.versions-select select
	height: 36px;
	border: 1px solid #898989;
	outline: none;
	background: transparent;
	padding: 0 6px;
.page-inner
	padding: 20px
	@media (min-width: 1300px)
		padding: 0 220px 40px 240px + 30px;
